        if (editingPresentacion == null || editPresentacionPrecio <= 0) return;

        isSavingPresentacion = true;
        StateHasChanged();

        try
        {
            var dto = new PresentacionUpdateDTO
            {
                Nombre = editingPresentacion.CantidadUnidades == 1 ? null : editPresentacionNombre,
                Precio = editPresentacionPrecio
            };

            var response = await PresentacionService.UpdateAsync(editingPresentacion.IdPresentacion, dto);

            if (response.Success)
            {
                ToastService.ShowSuccess("Presentacion actualizada");
                showEditPresentacionModal = false;
                await LoadPresentaciones();

                // Si es la presentacion unitaria, actualizar tambien la lista de productos
                if (editingPresentacion.CantidadUnidades == 1)
