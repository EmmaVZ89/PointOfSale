@code {
    private bool showAboutModal = false;
    private bool showThemeModal = false;
    private bool showMobileMenu = false;

    protected override void OnInitialized()
    {
        SidebarState.OnChange += StateHasChanged;
        ThemeService.OnThemeChanged += StateHasChanged;
    }

    private void ToggleSidebar()
    {
        SidebarState.ToggleSidebar();
    }

    private void ToggleMobileMenu()
    {
        showMobileMenu = !showMobileMenu;
    }

    private void ShowAboutModal()
    {
        showAboutModal = true;
    }

    private void ShowThemeModal()
    {
        showThemeModal = true;
    }

    private async Task SetThemeDefault() => await SetTheme("default");
    private async Task SetThemeGreen() => await SetTheme("green");
    private async Task SetThemeRed() => await SetTheme("red");

    private async Task SetTheme(string theme)
    {
        await ThemeService.SetThemeAsync(theme);
        showThemeModal = false;
        ToastService.ShowSuccess($"Tema cambiado a {GetThemeName(theme)}");
    }

    private string GetThemeName(string theme) => theme switch
    {
        "default" => "Predeterminado",
        "green" => "Verde",
        "red" => "Rojo",
        _ => theme
    };

    private async Task HandleLogout()
    {
        await AuthService.LogoutAsync();
        ToastService.ShowInfo("Sesión cerrada correctamente");
        Navigation.NavigateTo("/login", forceLoad: true);
    }

    public void Dispose()
    {
        SidebarState.OnChange -= StateHasChanged;
        ThemeService.OnThemeChanged -= StateHasChanged;
    }
}
