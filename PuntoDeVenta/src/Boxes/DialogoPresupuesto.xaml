<Window x:Class="PuntoDeVenta.src.Boxes.DialogoPresupuesto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Presupuesto Generado" Height="280" Width="420"
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent"
        ResizeMode="NoResize">

    <Border CornerRadius="15" Background="White" BorderBrush="#E0E0E0" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" CornerRadius="15,15,0,0" Background="#4A90D9" Padding="20,15">
                <StackPanel Orientation="Horizontal">
                    <Path Data="M19,3H5C3.89,3 3,3.89 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5C21,3.89 20.1,3 19,3M9.5,11.5C9.5,12.33 8.83,13 8,13H7V15H5.5V9H8C8.83,9 9.5,9.67 9.5,10.5M14.5,13.5C14.5,14.33 13.83,15 13,15H10.5V9H13C13.83,9 14.5,9.67 14.5,10.5M18.5,10.5H17V11.5H18.5V13H17V15H15.5V9H18.5M7,10.5H8V11.5H7M12,10.5H13V13.5H12"
                          Fill="White" Width="28" Height="28" Stretch="Uniform"/>
                    <TextBlock Text="Presupuesto Generado" Foreground="White" FontSize="18"
                               FontWeight="SemiBold" VerticalAlignment="Center" Margin="15,0,0,0"/>
                </StackPanel>
            </Border>

            <!-- Contenido -->
            <StackPanel Grid.Row="1" Margin="25,20">
                <TextBlock Text="¿Qué desea hacer con el presupuesto?" FontSize="14"
                           Foreground="#333" TextWrapping="Wrap" Margin="0,0,0,20"/>

                <TextBlock x:Name="txtInfo" Text="" FontSize="12" Foreground="#666"
                           TextWrapping="Wrap" Margin="0,0,0,10"/>
            </StackPanel>

            <!-- Botones -->
            <Grid Grid.Row="2" Margin="20,0,20,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Imprimir -->
                <Button Grid.Column="0" x:Name="BtnImprimir" Click="BtnImprimir_Click"
                        Margin="5" Height="50" Cursor="Hand"
                        Background="#27AE60" Foreground="White" BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="10,5">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Path Data="M18,3H6V7H18M19,12A1,1 0 0,1 18,11A1,1 0 0,1 19,10A1,1 0 0,1 20,11A1,1 0 0,1 19,12M16,19H8V14H16M19,8H5A3,3 0 0,0 2,11V17H6V21H18V17H22V11A3,3 0 0,0 19,8Z"
                                          Fill="White" Width="20" Height="20" Stretch="Uniform"/>
                                    <TextBlock Text="Imprimir" FontSize="11" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Guardar -->
                <Button Grid.Column="1" x:Name="BtnGuardar" Click="BtnGuardar_Click"
                        Margin="5" Height="50" Cursor="Hand"
                        Background="#3498DB" Foreground="White" BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="10,5">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Path Data="M15,9H5V5H15M12,19A3,3 0 0,1 9,16A3,3 0 0,1 12,13A3,3 0 0,1 15,16A3,3 0 0,1 12,19M17,3H5C3.89,3 3,3.9 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V7L17,3Z"
                                          Fill="White" Width="20" Height="20" Stretch="Uniform"/>
                                    <TextBlock Text="Guardar" FontSize="11" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Cancelar -->
                <Button Grid.Column="2" x:Name="BtnCancelar" Click="BtnCancelar_Click"
                        Margin="5" Height="50" Cursor="Hand"
                        Background="#95A5A6" Foreground="White" BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="10,5">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Path Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z"
                                          Fill="White" Width="20" Height="20" Stretch="Uniform"/>
                                    <TextBlock Text="Cancelar" FontSize="11" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>
