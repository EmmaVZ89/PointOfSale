<Page x:Class="PuntoDeVenta.Views.RegistrarMovimiento"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="RegistrarMovimiento">

    <Page.Resources>
        <!-- ESTILOS LOCALES -->
        <Style x:Key="BtnBase" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BtnVerde" TargetType="Button" BasedOn="{StaticResource BtnBase}">
            <Setter Property="Background" Value="#2ecc71"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#27ae60"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BtnRojo" TargetType="Button" BasedOn="{StaticResource BtnBase}">
            <Setter Property="Background" Value="#e74c3c"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#c0392b"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="InputLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#7f8c8d"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="InputText" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5,0,5,0"/>
        </Style>
    </Page.Resources>

    <!-- OVERLAY OSCURO (Fondo Semitransparente) -->
    <!-- El evento MouseDown aquí detecta clics fuera del formulario -->
    <Grid Background="#7F000000" MouseDown="Overlay_MouseDown">
        
        <!-- TARJETA DEL MODAL (Clics aquí NO deben cerrar, handled en código o por estructura) -->
        <Border Background="White" CornerRadius="8" Width="500" VerticalAlignment="Center" HorizontalAlignment="Center"
                Padding="25" MouseDown="Card_MouseDown">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.3"/>
            </Border.Effect>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Titulo -->
                    <RowDefinition Height="Auto"/> <!-- Tipo Movimiento -->
                    <RowDefinition Height="Auto"/> <!-- Producto -->
                    <RowDefinition Height="Auto"/> <!-- Cantidad -->
                    <RowDefinition Height="Auto"/> <!-- Observacion -->
                    <RowDefinition Height="Auto"/> <!-- Botones -->
                </Grid.RowDefinitions>

                <!-- Titulo -->
                <TextBlock Text="Registrar Movimiento" FontSize="22" FontWeight="Bold" Foreground="#2c3e50" 
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <!-- Tipo Movimiento -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <RadioButton Name="rbEntrada" GroupName="Tipo" FontSize="16" Margin="0,0,30,0" IsChecked="True" Cursor="Hand" VerticalContentAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z" Fill="#2ecc71" Width="16" Height="16" Stretch="Uniform" Margin="0,0,5,0"/>
                            <TextBlock Text="ENTRADA" FontWeight="SemiBold" Foreground="#2ecc71"/>
                        </StackPanel>
                    </RadioButton>
                    
                    <RadioButton Name="rbSalida" GroupName="Tipo" FontSize="16" Cursor="Hand" VerticalContentAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M19,13H5V11H19V13Z" Fill="#e74c3c" Width="16" Height="16" Stretch="Uniform" Margin="0,0,5,0"/>
                            <TextBlock Text="SALIDA" FontWeight="SemiBold" Foreground="#e74c3c"/>
                        </StackPanel>
                    </RadioButton>
                </StackPanel>

                <!-- Producto -->
                <StackPanel Grid.Row="2" Margin="0,0,0,15">
                    <TextBlock Text="Producto:" Style="{StaticResource InputLabel}"/>
                    <ComboBox Name="cbProductos" Height="35" IsEditable="True" FontSize="15" VerticalContentAlignment="Center"
                              DisplayMemberPath="Nombre" SelectedValuePath="IdArticulo"/>
                </StackPanel>

                <!-- Cantidad -->
                <StackPanel Grid.Row="3" Margin="0,0,0,15">
                    <TextBlock Text="Cantidad:" Style="{StaticResource InputLabel}"/>
                    <TextBox Name="tbCantidad" Style="{StaticResource InputText}" PreviewTextInput="NumberValidationTextBox"/>
                </StackPanel>

                <!-- Observacion -->
                <StackPanel Grid.Row="4" Margin="0,0,0,25">
                    <TextBlock Text="Observación (Opcional):" Style="{StaticResource InputLabel}"/>
                    <TextBox Name="tbObservacion" Height="70" TextWrapping="Wrap" Style="{StaticResource InputText}" 
                             VerticalContentAlignment="Top" Padding="5"/>
                </StackPanel>

                <!-- Botones -->
                <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Cancelar (Esc)" Width="130" Height="40" Margin="0,0,10,0"
                            Style="{StaticResource BtnRojo}" Background="#95a5a6" Click="BtnCancelar_Click"/>
                    
                    <Button Content="Guardar (F1)" Width="130" Height="40"
                            Style="{StaticResource BtnVerde}" Click="BtnGuardar_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>