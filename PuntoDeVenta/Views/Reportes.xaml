<UserControl x:Class="PuntoDeVenta.Views.Reportes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PuntoDeVenta.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" 
             d:DesignWidth="1000"
             Language="es-ES"
             Background="Transparent">

    <UserControl.Resources>
        <!-- Estilos copiados/referenciados de los otros modulos para consistencia -->
        <Style x:Key="BtnBase" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BtnVerde" TargetType="Button" BasedOn="{StaticResource BtnBase}">
            <Setter Property="Background" Value="#2ecc71"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#27ae60"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BtnAzul" TargetType="Button" BasedOn="{StaticResource BtnBase}">
            <Setter Property="Background" Value="#3498db"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980b9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BtnRojo" TargetType="Button" BasedOn="{StaticResource BtnBase}">
            <Setter Property="Background" Value="#e74c3c"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#c0392b"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BtnTab" TargetType="RadioButton">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="Foreground" Value="#7F8C8D"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="1" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" TargetName="bd" Value="#2ECC71"/> <!-- Verde Activo -->
                                <Setter Property="BorderBrush" TargetName="bd" Value="#2ECC71"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="InputLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#7f8c8d"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
    </UserControl.Resources>

    <Border CornerRadius="10" Background="Transparent">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Titulo -->
                <RowDefinition Height="Auto"/> <!-- Tabs -->
                <RowDefinition Height="Auto"/> <!-- Filtros -->
                <RowDefinition Height="*"/>    <!-- Grilla -->
                <RowDefinition Height="60"/>   <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- 1. TITULO -->
            <TextBlock Grid.Row="0" Text="Centro de Reportes" FontSize="28" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,20"/>

            <!-- 2. TABS SELECCION -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
                <RadioButton Content="Ventas Detalladas" GroupName="Reportes" IsChecked="True" Style="{StaticResource BtnTab}" Checked="Radio_Checked"
                             ToolTip="Muestra un listado pormenorizado de cada venta realizada en el rango de fechas seleccionado. Incluye: Nro. de Factura, Fecha y Hora exacta, Vendedor responsable, Nombre del Producto, Cantidad vendida, Precio unitario aplicado y el Subtotal de la transacción."/>
                <RadioButton Content="Stock Valorizado" GroupName="Reportes" Style="{StaticResource BtnTab}" Checked="Radio_Checked"
                             ToolTip="Presenta el estado actual de la mercadería activa. Incluye: Código, Nombre del producto, Categoría, Stock actual en depósito, Precio de venta unitario y el Valor Total (Stock x Precio), permitiendo conocer el capital invertido en mercadería."/>
                <RadioButton Content="Productos Top" GroupName="Reportes" Style="{StaticResource BtnTab}" Checked="Radio_Checked"
                             ToolTip="Ranking de los 10 productos con mayor rotación en el período elegido. Muestra el nombre del producto, la cantidad total de unidades vendidas y el total de ingresos generados por cada uno, ordenados de mayor a menor éxito de venta."/>
                <RadioButton Content="Reimprimir Ticket" GroupName="Reportes" Style="{StaticResource BtnTab}" Checked="Radio_Checked"
                             ToolTip="Permite buscar una venta realizada y generar nuevamente el ticket/factura en formato PDF para guardar o imprimir."/>
            </StackPanel>

            <!-- 3. FILTROS (Dinamicos) -->
            <Border Grid.Row="2" Background="White" CornerRadius="5" Padding="15" Margin="0,0,0,15" BorderBrush="#ecf0f1" BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/> <!-- Desde -->
                        <ColumnDefinition Width="15"/>   <!-- Gap -->
                        <ColumnDefinition Width="Auto"/> <!-- Hasta -->
                        <ColumnDefinition Width="20"/>   <!-- Gap -->
                        <ColumnDefinition Width="Auto"/> <!-- Cliente -->
                        <ColumnDefinition Width="*"/>    <!-- Extra -->
                        <ColumnDefinition Width="Auto"/> <!-- Boton Generar -->
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" x:Name="pnlFechaDesde">
                        <TextBlock Text="Fecha Desde:" Style="{StaticResource InputLabel}"/>
                        <DatePicker Name="dpDesde" Width="140" Height="35" VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" x:Name="pnlFechaHasta">
                        <TextBlock Text="Fecha Hasta:" Style="{StaticResource InputLabel}"/>
                        <DatePicker Name="dpHasta" Width="140" Height="35" VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="4" x:Name="pnlCliente">
                        <TextBlock Text="Cliente:" Style="{StaticResource InputLabel}"/>
                        <ComboBox Name="cbClientes" Width="200" Height="35" VerticalContentAlignment="Center"
                                  DisplayMemberPath="RazonSocial" SelectedValuePath="IdCliente"/>
                    </StackPanel>

                    <StackPanel Grid.Column="6" VerticalAlignment="Bottom">
                        <Button Width="160" Height="35" Style="{StaticResource BtnVerde}" Click="BtnGenerar_Click">
                            <StackPanel Orientation="Horizontal">
                                <Path Data="M15.5,14L20.5,19L19,20.5L14,15.5V14.71L13.73,14.43C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.43,13.73L14.71,14H15.5M9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14Z"
                                      Fill="White" Width="16" Height="16" Stretch="Uniform" Margin="0,0,8,0"/>
                                <TextBlock Text="Generar Reporte"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- 4. GRILLA -->
            <DataGrid Grid.Row="3" x:Name="GridReportes" AutoGenerateColumns="True" IsReadOnly="True"
                      Background="White" BorderThickness="1" BorderBrush="#ecf0f1"
                      RowHeight="35" ColumnHeaderHeight="40" FontSize="14" HeadersVisibility="Column"
                      VerticalContentAlignment="Center"
                      AutoGeneratingColumn="GridReportes_AutoGeneratingColumn">
                <DataGrid.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="Padding" Value="5,0,5,0"/>
                    </Style>
                </DataGrid.Resources>
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="Padding" Value="5,0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0">
                                        <ContentPresenter VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#3498db"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.CellStyle>
            </DataGrid>

            <!-- 5. FOOTER -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                <!-- Botón Reimprimir Ticket (solo visible en tab Reimprimir) -->
                <Button x:Name="btnReimprimir" Width="160" Height="40" Margin="0,0,10,0" Style="{StaticResource BtnVerde}"
                        Click="BtnReimprimirTicket_Click" Visibility="Collapsed">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M19,8L15,12H18C18,15.31 15.31,18 12,18C11,18 10.03,17.75 9.2,17.3L7.74,18.76C8.97,19.54 10.43,20 12,20C16.42,20 20,16.42 20,12H23M6,12C6,8.69 8.69,6 12,6C13,6 13.97,6.25 14.8,6.7L16.26,5.24C15.03,4.46 13.57,4 12,4C7.58,4 4,7.58 4,12H1L5,16L9,12"
                              Fill="White" Width="16" Height="16" Stretch="Uniform" Margin="0,0,8,0"/>
                        <TextBlock Text="Reimprimir Ticket"/>
                    </StackPanel>
                </Button>

                <Button x:Name="btnExportarCSV" Width="140" Height="40" Margin="0,0,10,0" Style="{StaticResource BtnAzul}" Click="BtnExportarExcel_Click">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M15.8,20H14L12,16.6L10,20H8.2L11.1,15.5L8.2,11H10L12,14.4L14,11H15.8L12.9,15.5L15.8,20M13,9V3.5L18.5,9H13Z"
                              Fill="White" Width="16" Height="16" Stretch="Uniform" Margin="0,0,8,0"/>
                        <TextBlock Text="Exportar CSV"/>
                    </StackPanel>
                </Button>

                <Button x:Name="btnExportarPDF" Width="140" Height="40" Style="{StaticResource BtnRojo}" Click="BtnExportarPDF_Click">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z"
                              Fill="White" Width="16" Height="16" Stretch="Uniform" Margin="0,0,8,0"/>
                        <TextBlock Text="Reporte PDF"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>