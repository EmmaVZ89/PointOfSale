<Page x:Class="PuntoDeVenta.Views.CRUDProductos"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PuntoDeVenta.Views"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="CRUDProductos" Background="White">

    <Page.Resources>
        <!-- REUTILIZACION DE ESTILOS -->
        <Style x:Key="BtnBase" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BtnVerde" TargetType="Button" BasedOn="{StaticResource BtnBase}">
            <Setter Property="Background" Value="#2ecc71"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#27ae60"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BtnAzul" TargetType="Button" BasedOn="{StaticResource BtnBase}">
            <Setter Property="Background" Value="#3498db"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980b9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BtnNaranja" TargetType="Button" BasedOn="{StaticResource BtnBase}">
            <Setter Property="Background" Value="#f39c12"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#d35400"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BtnRojo" TargetType="Button" BasedOn="{StaticResource BtnBase}">
            <Setter Property="Background" Value="#e74c3c"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#c0392b"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="InputLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#7f8c8d"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>

        <Style x:Key="InputText" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5,0,5,0"/>
        </Style>
    </Page.Resources>

    <Border Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Titulo -->
                <RowDefinition Height="*"/>    <!-- Formulario -->
                <RowDefinition Height="60"/>   <!-- Botones -->
            </Grid.RowDefinitions>

            <!-- TITULO -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock x:Name="Titulo" Text="Nuevo Producto" FontSize="28" FontWeight="Bold" Foreground="#2c3e50"/>
                <Separator Margin="0,10,0,0"/>
            </StackPanel>

            <!-- FORMULARIO -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.2*"/> <!-- Datos -->
                    <ColumnDefinition Width="40"/>   <!-- Gap -->
                    <ColumnDefinition Width="*"/>    <!-- Imagen/Extra -->
                </Grid.ColumnDefinitions>

                <!-- COLUMNA 1: DATOS PRINCIPALES -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Nombre del Producto" Style="{StaticResource InputLabel}"/>
                    <TextBox x:Name="tbNombre" Style="{StaticResource InputText}"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Código" Style="{StaticResource InputLabel}"/>
                            <TextBox x:Name="tbCodigo" Style="{StaticResource InputText}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Categoría / Grupo" Style="{StaticResource InputLabel}"/>
                            <ComboBox x:Name="cbGrupo" Height="35" FontSize="16" VerticalContentAlignment="Center"/>
                        </StackPanel>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Precio Venta" Style="{StaticResource InputLabel}"/>
                            <TextBox x:Name="tbPrecio" Style="{StaticResource InputText}" 
                                     PreviewTextInput="DecimalValidationTextBox" TextAlignment="Right"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Stock Inicial" Style="{StaticResource InputLabel}"/>
                            <TextBox x:Name="tbCantidad" Style="{StaticResource InputText}" 
                                     PreviewTextInput="IntegerValidationTextBox" TextAlignment="Right"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="Unidad de Medida (ej. Unidad, Kg, Litro)" Style="{StaticResource InputLabel}"/>
                    <TextBox x:Name="tbUnidadMedida" Style="{StaticResource InputText}"/>
                </StackPanel>

                <!-- COLUMNA 2: IMAGEN Y DETALLES -->
                <StackPanel Grid.Column="2">
                    <!-- Estado Activo -->
                    <CheckBox x:Name="tbActivo" Content="Producto Activo" IsChecked="True" FontSize="16" Margin="0,32,0,20" Cursor="Hand"/>

                    <TextBlock Text="Descripción" Style="{StaticResource InputLabel}"/>
                    <TextBox x:Name="tbDescripcion" Height="80" TextWrapping="Wrap" FontSize="14" VerticalContentAlignment="Top" Padding="5"/>

                    <TextBlock Text="Imagen del Producto" Style="{StaticResource InputLabel}" Margin="0,15,0,5"/>
                    <Border BorderBrush="#bdc3c7" BorderThickness="1" CornerRadius="5" Height="150" Background="#f9f9f9">
                        <Grid>
                            <Image x:Name="imagen" Stretch="Uniform" Margin="5"/>
                            <Button x:Name="BtnCambiarImagen" Content="Seleccionar Imagen" 
                                    Background="Transparent" BorderBrush="Transparent" Foreground="#7f8c8d"
                                    VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10"
                                    FontSize="12" Cursor="Hand" Click="BtnCambiarImagen_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="#ecf0f1" CornerRadius="3" Padding="10,5">
                                            <ContentPresenter/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- BOTONES -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                <Button x:Name="BtnRegresar" Content="Cancelar / Volver" Width="160" Height="45" Margin="0,0,15,0"
                        Style="{StaticResource BtnAzul}" Background="#95a5a6" Click="BtnRegresar_Click"/>

                <Button x:Name="BtnCrear" Content="Guardar Producto" Width="180" Height="45" 
                        Style="{StaticResource BtnVerde}" Visibility="Collapsed" Click="BtnCrear_Click"/>

                <Button x:Name="BtnModificar" Content="Guardar Cambios" Width="180" Height="45" 
                        Style="{StaticResource BtnNaranja}" Visibility="Collapsed" Click="BtnModificar_Click"/>

                <Button x:Name="BtnEliminar" Content="Confirmar Eliminar" Width="180" Height="45" 
                        Style="{StaticResource BtnRojo}" Visibility="Collapsed" Click="BtnEliminar_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Page>