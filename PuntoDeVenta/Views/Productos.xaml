<UserControl x:Class="PuntoDeVenta.Views.Productos"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PuntoDeVenta.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" 
             d:DesignWidth="1000"
             Language="es-ES"
             Background="Transparent">

    <UserControl.Resources>
        <!-- ESTILOS DE BOTONES -->
        <Style x:Key="BtnBase" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BtnVerde" TargetType="Button" BasedOn="{StaticResource BtnBase}">
            <Setter Property="Background" Value="#2ecc71"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#27ae60"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BtnAzul" TargetType="Button" BasedOn="{StaticResource BtnBase}">
            <Setter Property="Background" Value="#3498db"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980b9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BtnNaranja" TargetType="Button" BasedOn="{StaticResource BtnBase}">
            <Setter Property="Background" Value="#f39c12"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#d35400"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BtnRojo" TargetType="Button" BasedOn="{StaticResource BtnBase}">
            <Setter Property="Background" Value="#e74c3c"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#c0392b"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ESTILOS DE COLUMNAS -->
        <Style x:Key="RightAlignedColumn" TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="0,0,10,0"/>
        </Style>

        <Style x:Key="CenteredColumn" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5,0,0,0"/>
        </Style>
    </UserControl.Resources>

    <Border CornerRadius="10" Background="Transparent">
        <Grid Name="GridProductos">
            <!-- Capa Base: Lista de Productos -->
            <Grid x:Name="Contenido" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/> <!-- Header -->
                    <RowDefinition Height="60"/> <!-- Buscador y Boton -->
                    <RowDefinition Height="*"/>  <!-- DataGrid -->
                </Grid.RowDefinitions>

                <!-- 1. Titulo -->
                <TextBlock Grid.Row="0" Text="Gestión de Productos" Foreground="#2c3e50" 
                           FontSize="28" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"/>

                <!-- 2. Barra de Herramientas -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/> <!-- Label Buscar -->
                        <ColumnDefinition Width="300"/>  <!-- Input Buscar -->
                        <ColumnDefinition Width="*"/>    <!-- Espacio -->
                        <ColumnDefinition Width="Auto"/> <!-- Boton Agregar -->
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Buscar:" VerticalAlignment="Center" 
                               Foreground="#7f8c8d" FontSize="16" Margin="0,0,10,0"/>
                    
                    <TextBox Grid.Column="1" Name="tbBuscar" Height="35" FontSize="16" 
                             VerticalContentAlignment="Center" Padding="5,0,0,0"
                             TextChanged="Buscando"/>

                    <!-- Filtro Eliminados -->
                    <CheckBox Grid.Column="2" Name="chkMostrarEliminados" Content="Mostrar Eliminados" 
                              VerticalAlignment="Center" Margin="20,0,0,0" FontSize="14" Foreground="#7F8C8D"
                              Checked="Filtro_Changed" Unchecked="Filtro_Changed"/>

                    <Button Grid.Column="3" Name="BtnCrearProducto" Height="40" Width="180" 
                            Style="{StaticResource BtnVerde}" Click="BtnCrearProducto_Click"
                            ToolTip="Crear un nuevo producto">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z" Fill="White" 
                                  Stretch="Uniform" Width="16" Height="16" Margin="0,0,10,0"/>
                            <TextBlock Text="Nuevo Producto" FontSize="16" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <!-- 3. Grilla de Datos -->
                <DataGrid Grid.Row="2" x:Name="GridDatos" AutoGenerateColumns="False" 
                          CanUserAddRows="False" CanUserResizeRows="False" IsReadOnly="True"
                          HeadersVisibility="Column" GridLinesVisibility="Horizontal"
                          Background="White" BorderThickness="1" BorderBrush="#ecf0f1"
                          RowHeight="40" ColumnHeaderHeight="40" FontSize="14" Margin="0,10,0,0">
                    
                    <DataGrid.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="5,0,0,0"/>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Código" Binding="{Binding Codigo}" Width="100" 
                                            ElementStyle="{StaticResource CenteredColumn}"/>
                        
                        <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="200" 
                                            ElementStyle="{StaticResource CenteredColumn}"/>
                        
                        <DataGridTextColumn Header="Descripción" Binding="{Binding Descripcion}" Width="*" 
                                            ElementStyle="{StaticResource CenteredColumn}"/>

                        <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad, StringFormat=N0}" Width="100" 
                                            ElementStyle="{StaticResource RightAlignedColumn}"/>
                        
                        <DataGridTextColumn Header="Precio" Binding="{Binding Precio, StringFormat={}{0:N2}}" Width="120" 
                                            ElementStyle="{StaticResource RightAlignedColumn}"/>

                        <DataGridTextColumn Header="Estado" Binding="{Binding EstadoStr}" Width="100" 
                                            ElementStyle="{StaticResource CenteredColumn}"/>

                        <!-- Columna de Acciones (Iconos) -->
                        <DataGridTemplateColumn Header="Acciones" Width="160">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <!-- Consultar -->
                                        <Button Style="{StaticResource BtnAzul}" Width="35" Height="35" Margin="0,0,5,0"
                                                Click="BtnConsultar_Click" CommandParameter="{Binding IdArticulo}"
                                                ToolTip="Ver Detalles">
                                            <Path Data="M12,9A3,3 0 0,0 9,12A3,3 0 0,0 12,15A3,3 0 0,0 15,12A3,3 0 0,0 12,9M12,17A5,5 0 0,1 7,12A5,5 0 0,1 12,7A5,5 0 0,1 17,12A5,5 0 0,1 12,17M12,4.5C7,4.5 2.73,7.61 1,12C2.73,16.39 7,19.5 12,19.5C17,19.5 21.27,16.39 23,12C21.27,7.61 17,4.5 12,4.5Z" 
                                                  Fill="White" Stretch="Uniform" Width="18" Height="18"/>
                                        </Button>

                                        <!-- Modificar -->
                                        <Button Style="{StaticResource BtnNaranja}" Width="35" Height="35" Margin="0,0,5,0"
                                                Click="BtnModificar_Click" CommandParameter="{Binding IdArticulo}"
                                                ToolTip="Modificar Producto">
                                            <Path Data="M20.71,7.04C21.1,6.65 21.1,6 20.71,5.63L18.37,3.29C18,2.9 17.35,2.9 16.96,3.29L15.12,5.12L18.87,8.87M3,17.25V21H6.75L17.81,9.93L14.06,6.18L3,17.25Z" 
                                                  Fill="White" Stretch="Uniform" Width="16" Height="16"/>
                                        </Button>

                                        <!-- Eliminar -->
                                        <Button Style="{StaticResource BtnRojo}" Width="35" Height="35"
                                                Click="BtnEliminar_Click" CommandParameter="{Binding IdArticulo}"
                                                ToolTip="Eliminar Producto">
                                            <Path Data="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z" 
                                                  Fill="White" Stretch="Uniform" Width="16" Height="16"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

            <!-- Capa Superpuesta: CRUD (Frame) -->
            <Frame x:Name="FrameProductos" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Border>
</UserControl>