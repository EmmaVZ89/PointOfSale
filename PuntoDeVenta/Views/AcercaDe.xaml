<Window x:Class="PuntoDeVenta.Views.AcercaDe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="AcercaDe" WindowStyle="None"
        WindowState="Maximized" AllowsTransparency="True" Background="Transparent">

    <Grid Background="#7F000000" MouseDown="Overlay_MouseDown">
        <Border Width="400" VerticalAlignment="Center" HorizontalAlignment="Center" Background="White" CornerRadius="10" MouseDown="Card_MouseDown">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" Opacity="0.3" ShadowDepth="0"/>
            </Border.Effect>
            
            <Grid Margin="25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Acerca del Sistema" FontSize="22" FontWeight="Bold" Foreground="#2C3E50" HorizontalAlignment="Center"/>

                <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="0,20">
                    <TextBlock Text="Sistema de Gestión de Ventas" FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Center" Foreground="#34495E"/>
                    <TextBlock Text="Versión 2.0" FontSize="14" HorizontalAlignment="Center" Foreground="#7F8C8D" Margin="0,5,0,25"/>
                    
                    <TextBlock Text="Desarrollado por:" FontSize="12" HorizontalAlignment="Center" Foreground="#95A5A6"/>
                    <TextBlock Text="Emmanuel Zelarayán" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#2ECC71" Margin="0,0,0,15"/>
                    
                    <!-- Datos de Contacto -->
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Path Data="M20,8L12,13L4,8V6L12,11L20,6M20,4H4C2.89,4 2,4.89 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V6C22,4.89 21.1,4 20,4Z" 
                                  Fill="#7F8C8D" Width="16" Height="16" Stretch="Uniform" Margin="0,0,10,0"/>
                            <TextBlock Text="emmavz@live.com" Foreground="#34495E"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <Path Data="M6.62,10.79C8.06,13.62 10.38,15.94 13.21,17.38L15.41,15.18C15.69,14.9 16.08,14.82 16.43,14.93C17.55,15.3 18.75,15.5 18,15.5C18.55,15.5 19,15.95 19,16.5V20C19,20.55 18.55,21 18,21C8.61,21 1,13.39 1,4C1,3.45 1.45,3 2,3H5.5C6.05,3 6.5,3.45 6.5,4C6.5,5.25 6.7,6.45 7.07,7.57C7.18,7.92 7.1,8.31 6.82,8.59L6.62,10.79Z" 
                                  Fill="#7F8C8D" Width="16" Height="16" Stretch="Uniform" Margin="0,0,10,0"/>
                            <TextBlock Text="1159459241" Foreground="#34495E"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <Button Grid.Row="2" Content="Cerrar" Height="40" Click="BtnCerrar_Click" Cursor="Hand" Margin="0,10,0,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#3498DB"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
