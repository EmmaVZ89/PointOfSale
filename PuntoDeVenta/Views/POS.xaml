<UserControl x:Class="PuntoDeVenta.Views.POS"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PuntoDeVenta.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" 
             d:DesignWidth="1000"
             Language="es-ES"
             Background="Transparent">

    <UserControl.Resources>
        <!-- ESTILOS LOCALES PARA ASEGURAR COLORES FIJOS -->
        <Style x:Key="BtnVerde" TargetType="Button">
            <Setter Property="Background" Value="#2ecc71"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#27ae60"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#95a5a6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BtnRojo" TargetType="Button">
            <Setter Property="Background" Value="#e74c3c"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#c0392b"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RightAlignedColumn" TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="0,0,10,0"/>
        </Style>

        <Style x:Key="CenteredColumn" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5,0,0,0"/>
        </Style>
    </UserControl.Resources>

    <Border CornerRadius="10" Background="White" Margin="10">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Titulo -->
                <RowDefinition Height="Auto"/> <!-- Cliente -->
                <RowDefinition Height="Auto"/> <!-- Header / Input -->
                <RowDefinition Height="*"/>    <!-- Grilla -->
                <RowDefinition Height="Auto"/> <!-- Footer / Totales -->
            </Grid.RowDefinitions>

            <!-- TITULO -->
            <TextBlock Grid.Row="0" Text="Punto de Venta" Foreground="#2c3e50"
                       FontSize="28" FontWeight="Bold" Margin="0,0,0,15"/>

            <!-- SECCION CLIENTE -->
            <Border Grid.Row="1" BorderBrush="#ecf0f1" BorderThickness="0,0,0,1" Padding="0,0,0,10" Margin="0,0,0,10">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Cliente:" Foreground="#7f8c8d" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox x:Name="cbClientes" Width="350" Height="35" FontSize="14"
                              VerticalContentAlignment="Center" Padding="5,0,0,0"
                              DisplayMemberPath="RazonSocial" SelectedValuePath="IdCliente"/>
                </StackPanel>
            </Border>

            <!-- SECCION 1: INPUT DE PRODUCTOS -->
            <Border Grid.Row="2" BorderBrush="#ecf0f1" BorderThickness="0,0,0,2" Padding="0,0,0,15" Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/> <!-- Buscador -->
                        <ColumnDefinition Width="1*"/> <!-- Precio -->
                        <ColumnDefinition Width="1*"/> <!-- Cantidad -->
                        <ColumnDefinition Width="80"/> <!-- Boton Agregar -->
                    </Grid.ColumnDefinitions>

                    <!-- Buscador -->
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Buscar Producto:" Foreground="#7f8c8d" FontSize="12" Margin="0,0,0,5"/>
                        <ComboBox x:Name="cbProductos" Height="35" FontSize="15" IsEditable="True" 
                                  IsTextSearchEnabled="True" Padding="5,0,0,0" VerticalContentAlignment="Center"
                                  DisplayMemberPath="Nombre" SelectedValuePath="IdArticulo"
                                  SelectionChanged="CbProductos_SelectionChanged"
                                  DropDownClosed="CbProductos_DropDownClosed"
                                  KeyUp="CbProductos_KeyUp"/>
                    </StackPanel>

                    <!-- Precio -->
                    <StackPanel Grid.Column="1" Margin="0,0,10,0">
                        <TextBlock Text="Precio Unit.:" Foreground="#7f8c8d" FontSize="12" Margin="0,0,0,5"/>
                        <TextBox x:Name="tbPrecio" Height="35" FontSize="15" VerticalContentAlignment="Center"
                                 TextAlignment="Right" Padding="0,0,5,0"
                                 PreviewTextInput="NumberValidationTextBox"/>
                    </StackPanel>

                    <!-- Cantidad -->
                    <StackPanel Grid.Column="2" Margin="0,0,10,0">
                        <TextBlock Text="Cantidad:" Foreground="#7f8c8d" FontSize="12" Margin="0,0,0,5"/>
                        <TextBox x:Name="tbCantidad" Height="35" FontSize="15" VerticalContentAlignment="Center"
                                 TextAlignment="Right" Padding="0,0,5,0"
                                 Text="1" PreviewTextInput="NumberValidationTextBox" KeyDown="TbCantidad_KeyDown"/>
                    </StackPanel>

                    <!-- Boton Agregar -->
                    <Button Grid.Column="3" Width="60" Height="35" VerticalAlignment="Bottom"
                            Style="{StaticResource BtnVerde}" Click="BtnAgregar_Click"
                            ToolTip="Agregar producto al carrito (Enter)">
                        <Path Data="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z" Fill="White" Stretch="Uniform" Width="18" Height="18"/>
                    </Button>
                </Grid>
            </Border>

            <!-- SECCION 2: GRILLA -->
            <DataGrid Grid.Row="3" x:Name="GridProductos" AutoGenerateColumns="False" CanUserAddRows="False"
                      IsReadOnly="True" HeadersVisibility="Column" GridLinesVisibility="Horizontal"
                      Background="White" BorderThickness="1" BorderBrush="#ecf0f1" RowHeight="40" 
                      ColumnHeaderHeight="40" FontSize="14">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="C贸d" Binding="{Binding Codigo}" Width="80"
                                        ElementStyle="{StaticResource CenteredColumn}"/>
                    <DataGridTextColumn Header="Descripci贸n" Binding="{Binding Nombre}" Width="*"
                                        ElementStyle="{StaticResource CenteredColumn}"/>
                    <DataGridTextColumn Header="Precio" Binding="{Binding Precio, StringFormat={}{0:N2}}" Width="110" 
                                        ElementStyle="{StaticResource RightAlignedColumn}"/>
                    <DataGridTextColumn Header="Cant." Binding="{Binding Cantidad, StringFormat=N0}" Width="80" 
                                        ElementStyle="{StaticResource RightAlignedColumn}"/>
                    <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat={}{0:N2}}" Width="120" FontWeight="Bold" 
                                        ElementStyle="{StaticResource RightAlignedColumn}"/>
                    
                    <DataGridTemplateColumn Header="Acci贸n" Width="70">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Style="{StaticResource BtnRojo}" Width="30" Height="30" 
                                        VerticalAlignment="Center" HorizontalAlignment="Center"
                                        Click="BtnEliminarFila_Click" ToolTip="Quitar item">
                                    <Path Data="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z" Fill="White" Stretch="Uniform" Width="14" Height="14"/>
                                </Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <!-- SECCION 3: FOOTER -->
            <Grid Grid.Row="4" Margin="0,15,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/> <!-- Izquierda -->
                    <ColumnDefinition Width="*"/>    <!-- Espacio -->
                    <ColumnDefinition Width="350"/> <!-- Totales -->
                </Grid.ColumnDefinitions>

                <!-- Izquierda: Anular y Pago -->
                <!-- Usamos Grid interno para mejor alineaci贸n vertical -->
                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/> <!-- Anular -->
                        <ColumnDefinition Width="Auto"/> <!-- Paga con -->
                        <ColumnDefinition Width="Auto"/> <!-- Cambio -->
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Content="Anular Todo" Style="{StaticResource BtnRojo}" Width="110" Height="35" 
                            Margin="0,0,20,0" Click="BtnAnular_Click" VerticalAlignment="Bottom"/>

                    <StackPanel Grid.Column="1" VerticalAlignment="Bottom" Margin="0,0,20,0">
                        <TextBlock Text="Paga con:" Foreground="#7f8c8d" FontSize="12" Margin="0,0,0,5"/>
                        <TextBox x:Name="tbPagaCon" Width="140" Height="35" FontSize="18" FontWeight="Bold" 
                                 TextAlignment="Right" VerticalContentAlignment="Center" Padding="0,0,5,0"
                                 PreviewTextInput="NumberValidationTextBox" TextChanged="TbPagaCon_TextChanged"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" VerticalAlignment="Bottom">
                        <TextBlock Text="Su cambio:" Foreground="#7f8c8d" FontSize="12" Margin="0,0,0,5"/>
                        <TextBlock x:Name="lblVuelto" Text="$0.00" FontSize="24" Foreground="#e67e22" FontWeight="Bold" 
                                   VerticalAlignment="Bottom" Margin="0,0,0,-2"/> <!-- Ajuste fino para base de linea -->
                    </StackPanel>
                </Grid>

                <!-- Derecha: Totales -->
                <Border Grid.Column="2" Background="#f8f9fa" CornerRadius="10" Padding="15">
                    <StackPanel>
                        <DockPanel Margin="0,0,0,5">
                            <TextBlock Text="Subtotal:" Foreground="#7f8c8d" FontSize="14"/>
                            <TextBlock x:Name="lblSubtotal" Text="$0.00" HorizontalAlignment="Right" FontSize="14"/>
                        </DockPanel>
                        <Separator Margin="0,5"/>
                        <DockPanel Margin="0,5,0,15">
                            <TextBlock Text="TOTAL:" FontWeight="Bold" FontSize="24" VerticalAlignment="Bottom"/>
                            <TextBlock x:Name="lblTotal" Text="$0.00" HorizontalAlignment="Right" FontWeight="Bold" FontSize="32" Foreground="#2c3e50"/>
                        </DockPanel>
                        
                        <Button Content="COBRAR" Style="{StaticResource BtnVerde}" Height="50" FontSize="18" FontWeight="Bold" Click="BtnCobrar_Click"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</UserControl>