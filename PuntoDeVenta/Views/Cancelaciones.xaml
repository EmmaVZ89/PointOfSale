<UserControl x:Class="PuntoDeVenta.Views.Cancelaciones"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PuntoDeVenta.Views"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="1000"
             Background="Transparent">

    <UserControl.Resources>
        <Style x:Key="BtnBase" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BtnRojo" TargetType="Button" BasedOn="{StaticResource BtnBase}">
            <Setter Property="Background" Value="#e74c3c"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#c0392b"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BtnAzul" TargetType="Button" BasedOn="{StaticResource BtnBase}">
            <Setter Property="Background" Value="#3498db"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980b9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CenteredColumn" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5,0,0,0"/>
        </Style>

        <Style x:Key="RightAlignedColumn" TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="0,0,10,0"/>
        </Style>
    </UserControl.Resources>

    <Border CornerRadius="10" Background="Transparent">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Titulo -->
            <TextBlock Grid.Row="0" Text="Cancelacion de Ventas" Foreground="#2c3e50"
                       FontSize="28" FontWeight="Bold" VerticalAlignment="Center"/>

            <!-- Barra Herramientas -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="350"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Buscar Factura:" VerticalAlignment="Center"
                           Foreground="#7f8c8d" FontSize="16" Margin="0,0,10,0"/>

                <TextBox Grid.Column="1" Name="tbBuscar" Height="35" FontSize="16"
                         VerticalContentAlignment="Center" Padding="5,0,0,0"
                         KeyDown="TbBuscar_KeyDown"/>

                <Button Grid.Column="2" Name="BtnBuscar" Height="40" Width="100" Margin="10,0,0,0"
                        Style="{StaticResource BtnAzul}" Click="BtnBuscar_Click">
                    <TextBlock Text="Buscar" FontSize="14" FontWeight="SemiBold"/>
                </Button>
            </Grid>

            <!-- DataGrid Ventas -->
            <DataGrid Grid.Row="2" x:Name="GridVentas" AutoGenerateColumns="False"
                      CanUserAddRows="False" CanUserResizeRows="False" IsReadOnly="True"
                      HeadersVisibility="Column" GridLinesVisibility="Horizontal"
                      Background="White" BorderThickness="1" BorderBrush="#ecf0f1"
                      RowHeight="40" ColumnHeaderHeight="40" FontSize="14" Margin="0,10,0,0"
                      SelectionChanged="GridVentas_SelectionChanged">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Factura" Binding="{Binding No_Factura}" Width="150" ElementStyle="{StaticResource CenteredColumn}"/>
                    <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha_Venta, StringFormat={}{0:dd/MM/yyyy HH:mm}}" Width="180" ElementStyle="{StaticResource CenteredColumn}"/>
                    <DataGridTextColumn Header="Vendedor" Binding="{Binding Vendedor}" Width="150" ElementStyle="{StaticResource CenteredColumn}"/>
                    <DataGridTextColumn Header="Cliente" Binding="{Binding Cliente}" Width="*" ElementStyle="{StaticResource CenteredColumn}"/>
                    <DataGridTextColumn Header="Total" Binding="{Binding Monto_Total, StringFormat=C}" Width="120" ElementStyle="{StaticResource RightAlignedColumn}"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Panel Inferior: Detalle y Cancelacion -->
            <Border Grid.Row="3" Background="#f8f9fa" CornerRadius="10" Padding="15" Margin="0,15,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="350"/>
                    </Grid.ColumnDefinitions>

                    <!-- Detalle de Venta -->
                    <StackPanel Grid.Column="0" Margin="0,0,20,0">
                        <TextBlock Text="Detalle de Venta Seleccionada:" FontSize="14" FontWeight="SemiBold" Foreground="#34495e" Margin="0,0,0,10"/>
                        <DataGrid x:Name="GridDetalle" AutoGenerateColumns="False"
                                  CanUserAddRows="False" IsReadOnly="True"
                                  HeadersVisibility="Column" GridLinesVisibility="Horizontal"
                                  MaxHeight="150" FontSize="12" RowHeight="30" ColumnHeaderHeight="30">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Codigo" Binding="{Binding Codigo}" Width="100"/>
                                <DataGridTextColumn Header="Producto" Binding="{Binding Producto}" Width="*"/>
                                <DataGridTextColumn Header="Cant." Binding="{Binding Cantidad}" Width="60"/>
                                <DataGridTextColumn Header="Precio" Binding="{Binding PrecioUnit, StringFormat=C}" Width="80"/>
                                <DataGridTextColumn Header="Subtotal" Binding="{Binding Subtotal, StringFormat=C}" Width="90"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>

                    <!-- Formulario Cancelacion -->
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Motivo de Cancelacion (*):" FontSize="14" FontWeight="SemiBold" Foreground="#34495e" Margin="0,0,0,10"/>
                        <TextBox x:Name="tbMotivo" Height="80" FontSize="14" TextWrapping="Wrap"
                                 AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                                 Padding="5"/>

                        <Button x:Name="BtnCancelarVenta" Content="CANCELAR VENTA" Height="50" Margin="0,15,0,0"
                                Style="{StaticResource BtnRojo}" FontSize="16" FontWeight="Bold"
                                Click="BtnCancelarVenta_Click" IsEnabled="False"/>

                        <TextBlock Text="* Se devolvera el stock de los productos" FontSize="11"
                                   Foreground="#7f8c8d" Margin="0,10,0,0" TextAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
