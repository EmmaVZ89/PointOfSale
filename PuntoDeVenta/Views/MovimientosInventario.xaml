<UserControl x:Class="PuntoDeVenta.Views.MovimientosInventario"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:local="clr-namespace:PuntoDeVenta.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" 
             d:DesignWidth="1000"
             Language="es-ES"
             Background="Transparent">

    <UserControl.Resources>
        <!-- ESTILOS UNIFICADOS -->
        <Style x:Key="BtnBase" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BtnVerde" TargetType="Button" BasedOn="{StaticResource BtnBase}">
            <Setter Property="Background" Value="#2ecc71"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#27ae60"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BtnAzul" TargetType="Button" BasedOn="{StaticResource BtnBase}">
            <Setter Property="Background" Value="#3498db"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980b9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BtnRojo" TargetType="Button" BasedOn="{StaticResource BtnBase}">
            <Setter Property="Background" Value="#e74c3c"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#c0392b"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="InputLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#7f8c8d"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <!-- COLUMNAS DE DATA GRID -->
        <Style x:Key="RightAlignedColumn" TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="0,0,10,0"/>
        </Style>

        <Style x:Key="CenteredColumn" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5,0,0,0"/>
        </Style>
    </UserControl.Resources>

    <Border CornerRadius="10" Background="Transparent">
        <Grid Name="GridPrincipal" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Titulo -->
                <RowDefinition Height="Auto"/> <!-- Filtros -->
                <RowDefinition Height="220"/>  <!-- Graficos -->
                <RowDefinition Height="*"/>    <!-- DataGrid -->
                <RowDefinition Height="60"/>   <!-- Botones Footer -->
            </Grid.RowDefinitions>
            
            <!-- 1. Título -->
            <TextBlock Grid.Row="0" Text="Control de Inventario" Foreground="#2c3e50" 
                       FontSize="28" FontWeight="Bold" Margin="0,0,0,15"/>

            <!-- 2. Filtros -->
            <Border Grid.Row="1" Background="White" CornerRadius="5" Padding="15" Margin="0,0,0,15" BorderBrush="#ecf0f1" BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/> <!-- Desde -->
                        <ColumnDefinition Width="15"/>   <!-- Gap -->
                        <ColumnDefinition Width="Auto"/> <!-- Hasta -->
                        <ColumnDefinition Width="30"/>   <!-- Gap -->
                        <ColumnDefinition Width="*"/>    <!-- Buscar -->
                        <ColumnDefinition Width="15"/>   <!-- Gap -->
                        <ColumnDefinition Width="Auto"/> <!-- Boton Registrar -->
                    </Grid.ColumnDefinitions>

                    <!-- Desde -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Fecha Desde:" Style="{StaticResource InputLabel}"/>
                        <DatePicker Name="dpDesde" Width="140" Height="35" FontSize="14" VerticalContentAlignment="Center"
                                    SelectedDateChanged="Filtro_Changed"/>
                    </StackPanel>

                    <!-- Hasta -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Fecha Hasta:" Style="{StaticResource InputLabel}"/>
                        <DatePicker Name="dpHasta" Width="140" Height="35" FontSize="14" VerticalContentAlignment="Center"
                                    SelectedDateChanged="Filtro_Changed"/>
                    </StackPanel>

                    <!-- Buscar -->
                    <StackPanel Grid.Column="4">
                        <TextBlock Text="Buscar (Producto / Usuario):" Style="{StaticResource InputLabel}"/>
                        <TextBox Name="tbBuscar" Height="35" FontSize="15" VerticalContentAlignment="Center" Padding="5,0,0,0"
                                 TextChanged="Buscando"/>
                    </StackPanel>

                    <!-- Boton Registrar -->
                    <StackPanel Grid.Column="6" VerticalAlignment="Bottom">
                        <Button Content="+ Registrar Movimiento" Width="180" Height="35"
                                Style="{StaticResource BtnVerde}" Click="BtnRegistrar_Click" 
                                ToolTip="Agregar entrada o salida manual"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- 3. Gráficos -->
            <Grid Grid.Row="2" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Grafico Top Productos -->
                <Border Grid.Column="0" Background="White" CornerRadius="5" Padding="10" BorderBrush="#ecf0f1" BorderThickness="1">
                    <Grid>
                        <TextBlock Text="Top 5 Productos Movidos Hoy" HorizontalAlignment="Center" FontWeight="SemiBold" Foreground="#7f8c8d"/>
                        <lvc:CartesianChart Name="chartTopProductos" Margin="0,25,0,0">
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis Title="Producto" Labels="{Binding TopProductosLabels}"></lvc:Axis>
                            </lvc:CartesianChart.AxisX>
                        </lvc:CartesianChart>
                    </Grid>
                </Border>

                <!-- Grafico Entradas vs Salidas -->
                <Border Grid.Column="2" Background="White" CornerRadius="5" Padding="10" BorderBrush="#ecf0f1" BorderThickness="1">
                    <Grid>
                        <TextBlock Text="Resumen Diario (Entradas vs Salidas)" HorizontalAlignment="Center" FontWeight="SemiBold" Foreground="#7f8c8d"/>
                        <lvc:PieChart Name="chartResumen" LegendLocation="Right" Hoverable="True" DataTooltip="{x:Null}" Margin="0,25,0,0" InnerRadius="40">
                        </lvc:PieChart>
                    </Grid>
                </Border>
            </Grid>

            <!-- 4. DataGrid -->
            <DataGrid Grid.Row="3" x:Name="GridMovimientos"
                      AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                      Background="White" BorderThickness="1" BorderBrush="#ecf0f1"
                      RowHeight="35" ColumnHeaderHeight="40" FontSize="14" HeadersVisibility="Column">
                
                <DataGrid.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="Padding" Value="5,0,0,0"/>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="#" Binding="{Binding IdMovimiento}" Width="50" ElementStyle="{StaticResource CenteredColumn}"/>
                    <DataGridTextColumn Header="Fecha" Binding="{Binding FechaMovimiento, StringFormat=\{0:dd/MM/yyyy HH:mm\}}" Width="140" ElementStyle="{StaticResource CenteredColumn}"/>
                    <DataGridTextColumn Header="Tipo" Binding="{Binding TipoMovimiento}" Width="100" ElementStyle="{StaticResource CenteredColumn}"/>
                    <DataGridTextColumn Header="Producto" Binding="{Binding NombreProducto}" Width="*" ElementStyle="{StaticResource CenteredColumn}"/>
                    <DataGridTextColumn Header="Cód" Binding="{Binding CodigoProducto}" Width="80" ElementStyle="{StaticResource CenteredColumn}"/>
                    <DataGridTextColumn Header="Cant." Binding="{Binding Cantidad, StringFormat={}{0:N2}}" Width="80" ElementStyle="{StaticResource RightAlignedColumn}"/>
                    <DataGridTextColumn Header="Usuario" Binding="{Binding UsuarioResponsable}" Width="120" ElementStyle="{StaticResource CenteredColumn}"/>
                    <DataGridTextColumn Header="Obs" Binding="{Binding Observacion}" Width="150" ElementStyle="{StaticResource CenteredColumn}"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- 5. Footer Botones -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,10,0,0">
                <Button Width="140" Height="40" Margin="0,0,10,0" Style="{StaticResource BtnAzul}" Click="BtnExportarExcel_Click">
                    <StackPanel Orientation="Horizontal">
                        <!-- Icono Excel simple -->
                        <Path Data="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M15.8,20H14L12,16.6L10,20H8.2L11.1,15.5L8.2,11H10L12,14.4L14,11H15.8L12.9,15.5L15.8,20M13,9V3.5L18.5,9H13Z" 
                              Fill="White" Width="16" Height="16" Stretch="Uniform" Margin="0,0,8,0"/>
                        <TextBlock Text="Exportar CSV"/>
                    </StackPanel>
                </Button>
                
                <Button Width="140" Height="40" Style="{StaticResource BtnRojo}" Click="BtnReportePDF_Click">
                    <StackPanel Orientation="Horizontal">
                        <!-- Icono PDF simple -->
                        <Path Data="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z"
                              Fill="White" Width="16" Height="16" Stretch="Uniform" Margin="0,0,8,0"/>
                        <!-- Nota: Dejamos icono + genérico o buscamos uno de impresión -->
                        <TextBlock Text="Reporte PDF"/>
                    </StackPanel>
                </Button>
            </StackPanel>
            
            <!-- Frame para Modal -->
            <Frame x:Name="FrameModal" Grid.Row="0" Grid.RowSpan="5" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Border>
</UserControl>