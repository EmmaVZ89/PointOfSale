<UserControl x:Class="PuntoDeVenta.Views.Usuarios"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PuntoDeVenta.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" 
             d:DesignWidth="1000"
             Background="Transparent">

    <UserControl.Resources>
        <!-- ESTILOS UNIFICADOS -->
        <Style x:Key="BtnBase" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BtnVerde" TargetType="Button" BasedOn="{StaticResource BtnBase}">
            <Setter Property="Background" Value="#2ecc71"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#27ae60"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BtnNaranja" TargetType="Button" BasedOn="{StaticResource BtnBase}">
            <Setter Property="Background" Value="#f39c12"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#d35400"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BtnRojo" TargetType="Button" BasedOn="{StaticResource BtnBase}">
            <Setter Property="Background" Value="#e74c3c"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#c0392b"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CenteredColumn" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5,0,0,0"/>
        </Style>
        
        <!-- Convertidor para visibilidad inversa (PENDIENTE: Lo haremos por logica de codigo para simplificar o dos botones) -->
    </UserControl.Resources>

    <Border CornerRadius="10" Background="Transparent">
        <Grid Name="GridPrincipal">
            <Grid x:Name="Contenido" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/> <!-- Header -->
                    <RowDefinition Height="60"/> <!-- Buscador -->
                    <RowDefinition Height="*"/>  <!-- DataGrid -->
                </Grid.RowDefinitions>

                <!-- Titulo -->
                <TextBlock Grid.Row="0" Text="GestiÃ³n de Usuarios" Foreground="#2c3e50" 
                           FontSize="28" FontWeight="Bold" VerticalAlignment="Center"/>

                <!-- Barra Herramientas -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Buscar:" VerticalAlignment="Center" 
                               Foreground="#7f8c8d" FontSize="16" Margin="0,0,10,0"/>
                    
                    <TextBox Grid.Column="1" Name="tbBuscar" Height="35" FontSize="16" 
                             VerticalContentAlignment="Center" Padding="5,0,0,0"
                             TextChanged="Buscando"/>

                    <Button Grid.Column="3" Name="BtnCrearUsuario" Height="40" Width="180" 
                            Style="{StaticResource BtnVerde}" Click="BtnCrearUsuario_Click"
                            ToolTip="Registrar nuevo usuario">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z" Fill="White" 
                                  Stretch="Uniform" Width="16" Height="16" Margin="0,0,10,0"/>
                            <TextBlock Text="Nuevo Usuario" FontSize="16" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <!-- DataGrid -->
                <DataGrid Grid.Row="2" x:Name="GridDatos" AutoGenerateColumns="False" 
                          CanUserAddRows="False" CanUserResizeRows="False" IsReadOnly="True"
                          HeadersVisibility="Column" GridLinesVisibility="Horizontal"
                          Background="White" BorderThickness="1" BorderBrush="#ecf0f1"
                          RowHeight="40" ColumnHeaderHeight="40" FontSize="14" Margin="0,10,0,0">
                    
                    <DataGrid.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="5,0,0,0"/>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Usuario" Binding="{Binding Usuario}" Width="120" ElementStyle="{StaticResource CenteredColumn}"/>
                        <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*" ElementStyle="{StaticResource CenteredColumn}"/>
                        <DataGridTextColumn Header="Apellido" Binding="{Binding Apellido}" Width="*" ElementStyle="{StaticResource CenteredColumn}"/>
                        <DataGridTextColumn Header="Rol" Binding="{Binding NombrePrivilegio}" Width="120" ElementStyle="{StaticResource CenteredColumn}"/>
                        <DataGridTextColumn Header="Estado" Binding="{Binding EstadoStr}" Width="100" ElementStyle="{StaticResource CenteredColumn}"/>

                        <!-- Acciones -->
                        <DataGridTemplateColumn Header="Acciones" Width="160">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <!-- Modificar -->
                                        <Button Style="{StaticResource BtnNaranja}" Width="35" Height="35" Margin="0,0,5,0"
                                                Click="BtnModificar_Click" CommandParameter="{Binding IdUsuario}"
                                                ToolTip="Modificar Usuario">
                                            <Path Data="M20.71,7.04C21.1,6.65 21.1,6 20.71,5.63L18.37,3.29C18,2.9 17.35,2.9 16.96,3.29L15.12,5.12L18.87,8.87M3,17.25V21H6.75L17.81,9.93L14.06,6.18L3,17.25Z" 
                                                  Fill="White" Stretch="Uniform" Width="16" Height="16"/>
                                        </Button>

                                        <!-- Eliminar (Solo si Activo) -->
                                        <Button Style="{StaticResource BtnRojo}" Width="35" Height="35" Margin="0,0,5,0"
                                                Click="BtnEliminar_Click" CommandParameter="{Binding IdUsuario}"
                                                ToolTip="Dar de Baja">
                                            <Path Data="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z" 
                                                  Fill="White" Stretch="Uniform" Width="16" Height="16"/>
                                        </Button>
                                        
                                        <!-- Reactivar (Solo si Inactivo - requiere logica codebehind o converter) -->
                                        <!-- Por simplicidad, agregamos el boton y manejamos su visibilidad/accion en codigo si fuera posible, 
                                             pero en DataGrid Template es mas dificil sin Binding. 
                                             Haremos que el clic dispare una validacion en backend -->
                                        <Button Style="{StaticResource BtnVerde}" Width="35" Height="35"
                                                Click="BtnReactivar_Click" CommandParameter="{Binding IdUsuario}"
                                                ToolTip="Reactivar Usuario">
                                            <Path Data="M12,5V1L7,6L12,11V7A6,6 0 0,1 18,13A6,6 0 0,1 12,19A6,6 0 0,1 6,13H4A8,8 0 0,0 12,21A8,8 0 0,0 20,13A8,8 0 0,0 12,5Z" 
                                                  Fill="White" Stretch="Uniform" Width="16" Height="16"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

            <!-- Capa Frame -->
            <Frame x:Name="FrameUsuarios" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Border>
</UserControl>